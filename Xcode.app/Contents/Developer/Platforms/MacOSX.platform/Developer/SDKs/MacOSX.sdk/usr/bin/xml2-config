#! /bin/sh
prefix=/usr
exec_prefix=${prefix}
includedir=${prefix}/include
libdir=${exec_prefix}/lib
isysroot=
if [ ! -z "`xcrun -show-sdk-path 2> /dev/null`" ]
then
    isysroot="-isysroot $(xcrun -show-sdk-path 2> /dev/null)"
usage()
    cat <<EOF
Usage: xml2-config [OPTION]
Known values for OPTION are:
  --prefix=DIR
change libxml prefix [default $prefix]
  --exec-prefix=DIR
change libxml exec prefix [default $exec_prefix]
  --libs
print library linking information
  --cflags
print pre-processor and compiler flags
  --modules
module support enabled
  --help
display this help and exit
  --version
output version information
    exit $1
if test $# -eq 0; then
    usage 1
cflags=false
libs=false
while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac
    case "$1" in
    --prefix=*)
prefix=$optarg
includedir=$prefix/include
libdir=$prefix/lib
    --prefix)
echo $prefix
    --exec-prefix=*)
      exec_prefix=$optarg
      libdir=$exec_prefix/lib
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
echo 2.9.4
exit 0
    --help)
usage 0
    --cflags)
       
echo ${isysroot} -I${includedir}/libxml2 
       
    --libtool-libs)
if [ -r ${libdir}/libxml2.la ]
then
    echo ${libdir}/libxml2.la
        ;;
    --modules)
       
echo 1
       
    --libs)
        if [ "`uname`" = "Linux" ]
then
    if [ "-L${libdir}" = "-L/usr/lib" -o "-L${libdir}" = "-L/usr/lib64" ]
    then
echo -lxml2 -lz  -lpthread   -licucore -lm  
    else
echo -L${libdir} -lxml2 -lz  -lpthread   -licucore -lm  
    fi
else
    if [ "`uname`" = "Darwin" -a "-L${libdir}" = "-L/usr/lib" ]
    then
echo ${isysroot} -lxml2 -lz  -lpthread   -licucore -lm   
    else
echo ${isysroot} -L${libdir} -lxml2 -lz  -lpthread   -licucore -lm   
    fi
       
    *)
usage
exit 1
    esac
    shift
done
exit 0
